@model List<Category>
<head>
    <!--Font Awesome Icon-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        #loading{
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgba(255,255,255,0.5);
            z-index: 999;
        }

        .custom-title {
            margin-top: 20px;
            padding: 10px;
            margin-left: 200px;
        }

        .custom-title-category {
            margin-left: 200px;
            border: none;
        }
    </style>
</head>
<div class="container">
    <div class="row">
        <h1 class="custom-title">Categories</h1>
    </div>
    <div id="loading">
        <img src="/Loader.gif"/>
    </div>
    @foreach (var category in Model)
    {
        <section class="category mt-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 custom-title-category">
                        <div class="card" style="border:none;">
                            <h3 class="card-title">
                                @category.CategoryName
                            </h3>
                            <div>
                                <a asp-controller="Category" asp-action="Detail" asp-route-categoryId="@category.Id" class="btn btn-sm" style="background-color: #e68a0a;">
                                    <i class="fa-solid fa-arrow-right"></i>
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }  
</div>
<script>
    window.addEventListener('load', fg_load)

    function fg_load() {
        document.getElementById('loading').style.display = 'none'
    }

</script>